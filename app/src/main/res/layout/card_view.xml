<?xml version="1.0" encoding="utf-8"?>
<mountaincat.dominion.ui.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/yellow"
    android:orientation="vertical"
    android:transitionName="card">

    <TextView
        android:id="@+id/cardName"
        android:layout_width="match_parent"
        android:layout_height="@dimen/zero_spacing"
        android:layout_margin="@dimen/quad_spacing"
        android:layout_weight="1"
        android:background="@drawable/black_border"
        android:gravity="center"
        android:padding="@dimen/quad_spacing"
        android:text="Gold"
        android:transitionName="cardName" />

    <TextView
        android:id="@+id/cardText"
        android:layout_width="match_parent"
        android:layout_height="@dimen/zero_spacing"
        android:layout_margin="@dimen/quad_spacing"
        android:layout_weight="2"
        android:background="@drawable/black_border"
        android:gravity="center"
        android:padding="@dimen/quad_spacing"
        android:text="x2"
        android:transitionName="miscellaneous" />

</mountaincat.dominion.ui.CardView>